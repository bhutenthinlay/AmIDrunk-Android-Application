<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_light"
    >

    <TextView
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calling..."
        android:layout_gravity="center_horizontal" />

    <TextView
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kunsang"
        android:id="@+id/textViewCallName"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8000669160"
        android:id="@+id/textViewCallNumber"
        android:layout_gravity="center_horizontal" />

    <Button
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="#cc0000"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Call"
        android:id="@+id/buttonEndCall"
        android:layout_gravity="center_horizontal" />

    <Button
        android:background="#70cfc0"
        android:padding="10dp"
       android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speaker"
        android:id="@+id/buttonSpeaker"
        android:layout_gravity="center_horizontal" />




</LinearLayout>